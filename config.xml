    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="CameraUsesGeolocation" value="false" />
        <preference name="ShowSplashScreenSpinner" value="false" />
    </platform>
    <engine name="ios" spec="~3.9.2" />
    <plugin name="cordova-plugin-device" spec="~1.1.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.2.0" />
    <plugin name="com.ionic.keyboard" spec="~1.0.4" />
    <plugin name="cordova-plugin-network-information" spec="~1.2.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.0" />
    <plugin name="cordova-plugin-camera" spec="~2.1.0" />
    <plugin name="phonegap-facebook-plugin" spec="/Users/mnhasan/Downloads/phonegap-facebook-plugin-master">
        <variable name="APP_ID" value="1509055352739634" />
        <variable name="APP_NAME" value="Ecogiv" />
    </plugin>
    <plugin name="cordova-plugin-x-socialsharing" spec="https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git" />
